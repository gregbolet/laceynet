<!doctype html>
<html lang="en" style="width:100%; height:100%;">
	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<!-- Bootstrap CSS -->
		<link rel="stylesheet" href="static/bootstrap.min.css"> </link>
		<script src="static/jquery-3.6.0.min.js"></script>
		<script src="static/popper.min.js" ></script>
		<script src="static/bootstrap.min.js" ></script>

		<title>Guessing Game!</title>
	</head>

	<body style="width:100%; height:100%;">
		<div class="container" style="width:100%; height:100%;">
			<div class="col-md-12 text-center align-middle" style="width:100%; height:100%;">
				<button id="mainbutton" type="button" class="btn btn-primary btn-block" style="font-size:500%; width:100%; height:100%; height:50%; position: absolute; top:25%;">
					Button
				</button>
			</div>
		</div>


		<!-- Optional JavaScript -->
		<!-- jQuery first, then Popper.js, then Bootstrap JS -->
	</body>

	<script>
		var clientId = -1;
		var didGameOver = false;
		var eventSource = new EventSource('/events', {withCredentials: true});
		const button = document.getElementById('mainbutton');

		// On a message from the server, do these actions
		eventSource.onmessage = function(event) {
			
			// Get the data
			data = JSON.parse(event.data);
			console.log(data);

			// Make sure we know our clientID
			if(clientId == -1){
				clientId = data.clientId;
				console.log(`My client id: ${clientId}`);
			}

			else if(clientId !== data.clientId){
				console.log(`Client ID mismatch error!`);
				return;
			}

			// What command were we sent?
			command = data.command;

			if(command == 'restart'){
				console.log("Going to restart the game");
				button.innerHTML = 'Press to Start' + '<br>';
				$( "#mainbutton" ).removeClass( "btn-danger" )
				$( "#mainbutton" ).removeClass( "btn-primary" )
				$( "#mainbutton" ).removeClass( "btn-success" )
				$( "#mainbutton" ).addClass( "btn-warning" )
				didGameOver = false;
			}
			else if(didGameOver){
				// don't advance if we busted
				return;
			}
			else if(command == 'continue'){
				console.log("Going to continue the game");
				button.innerHTML = data.nextnum + '<br>';
				$( "#mainbutton" ).removeClass( "btn-warning" )
				$( "#mainbutton" ).addClass( "btn-primary" )
			}
			else if(command == 'gameover'){
				console.log("Going to wait till we restart...");
				button.innerHTML = 'Game Over!' + '<br>';
				$( "#mainbutton" ).removeClass( "btn-primary" )
				$( "#mainbutton" ).addClass( "btn-danger" )
				didGameOver = true;
			}
			else if(command == 'winner'){
				console.log("Going to wait till we restart...");
				button.innerHTML = 'WINNER!' + '<br>';
				$( "#mainbutton" ).removeClass( "btn-primary" )
				$( "#mainbutton" ).addClass( "btn-success" )
			}
		};

		// When the main button is pressed, do something
		button.addEventListener('click', function(e) {
			console.log('button was clicked');
			$.ajax({ 
				url: '/',
				type: 'POST',
				contentType: 'application/json',
				data: JSON.stringify({clientId:`${clientId}`,buttonevent:'press'}), 
				success: function(data){
					console.log('Success!');
					}, 
				error: function(jqXHR, textStatus, err){
					console.log('text status '+textStatus+', err '+err)
					}
				})
			console.log('Post request sent!');
		});
	</script>
</html>
